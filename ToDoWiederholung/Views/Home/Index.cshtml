@{
    ViewData["Title"] = "Home Page";
}

<!--Modal Add-->
<div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Titel:</h4>
                <input id="titleAdd" type="text" class="form-control" maxlength="50" />
                <p class="titleWarning"></p>
            </div>
            <div class="modal-body">
                <h4 class="modal-title">Notizen</h4>
                <textarea id="notesAdd" class="form-control" rows="3" maxlength="200"></textarea>
                <p class="notesWarning"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" tabindex="4">Schliessen</button>
                <button type="button" id="saveAdd" class="btn btn-primary" tabindex="3">Speichern</button>
            </div>
        </div>
    </div>
</div>

<!--Modal Edit-->
<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
           
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    @Html.Hidden("id")
                    <h4 class="modal-title" id="myModalLabel">Titel:</h4>
                    <input id="titleEdit" type="text" class="form-control" maxlength="50" />
                    <p class="titleWarning"></p>
                    <h4 class="modal-title">Notizen</h4>
                    <textarea id="notesEdit" class="form-control" rows="3" maxlength="200"></textarea>
                    <p class="notesWarning"></p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                <button type="button" id="saveEdit" class="btn btn-primary">Speichern</button>
            </div>
        </div>
    </div>
</div>

<h1 id="mainTitle">To Do Liste</h1>


<ul id="clicked" class="list-group">
    @{
        Html.RenderPartial("_List");
    }
</ul>

<div>
    <button type="button" id="delete" class="btn btn-danger">Löschen</button>
    <button type="button" id="edit" class="btn btn-primary">Ändern</button>
    <button type="button" id="add" class="btn btn-success">+</button>
</div>


<div id="alertError" class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert">&times;</a>
    Datenübertragung fehlgeschlagen!
</div>